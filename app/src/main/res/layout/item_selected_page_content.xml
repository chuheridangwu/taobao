<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical"
    app:cardElevation="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/selected_cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background"></ImageView>
        <TextView
            android:id="@+id/selected_title"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试文字"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/selected_but_btn"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textSize="16sp"
                android:background="@drawable/shape_tag_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领劵购买"></TextView>
            <TextView
                android:id="@+id/selected_original"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原件：9.9元"
                android:textColor="@color/colorPrimaryDark"></TextView>
        </LinearLayout>
    </LinearLayout>





</androidx.cardview.widget.CardView>