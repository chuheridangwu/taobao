<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sob="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--    历史记录-->
    <LinearLayout
        android:id="@+id/search_history_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:text="搜索历史"></TextView>
            <ImageView
                android:id="@+id/search_history_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete_icon"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        <com.cool.taobaojava.ui.custom.TextFlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sob:horizontalSpace="10dp"
            sob:verticalSpace="10dp"
            android:id="@+id/search_history_view"></com.cool.taobaojava.ui.custom.TextFlowLayout>
    </LinearLayout>
    <!--    推荐关键字-->
    <LinearLayout
        android:id="@+id/search_recommend_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:text="热门搜索"></TextView>
        </RelativeLayout>
        <com.cool.taobaojava.ui.custom.TextFlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sob:horizontalSpace="10dp"
            sob:verticalSpace="10dp"
            android:id="@+id/search_recommend_view"></com.cool.taobaojava.ui.custom.TextFlowLayout>
    </LinearLayout>
    <!--    搜索结果-->
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/search_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_result_list"></androidx.recyclerview.widget.RecyclerView>

        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.scwang.smart.refresh.footer.ClassicsFooter>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</LinearLayout>