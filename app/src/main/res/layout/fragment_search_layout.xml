<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/search_cancel"
            android:background="@drawable/home_edit_bg"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:hint="搜索你想要的商品.."
            android:inputType="text"
            android:textColorHint="@color/gray"
            android:paddingLeft="10dp"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"></EditText>
        <TextView
            android:gravity="center"
            android:id="@+id/search_cancel"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            ></TextView>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/remove"
            android:layout_centerVertical="true"
            android:layout_alignRight="@id/search_edit_text"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:id="@+id/search_remove"
            ></ImageView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>