<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorPagerBg"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:id="@+id/loop_pager"
        android:overScrollMode="never"></androidx.viewpager2.widget.ViewPager2>

    <include layout="@layout/include_home_pager_title"></include>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_page_content_list"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>